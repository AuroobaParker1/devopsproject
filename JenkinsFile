pipeline {
    agent any

    stages {
        // stage('Checkout SCM') {
        //     steps {
        //         git credentialsId: '1cdec1d8-91fd-4419-8624-1c430755e65a', url: 'https://github.com/AuroobaParker1/devopsproject'
        //     }
        // }   
        stage('Initial stage') {
            steps {
                echo 'initial stage'
            }
        }
        stage('minikube config') {
            steps {
                echo 'Starting minikube...'
                bat "docker context use default"
                bat 'minikube config set driver docker'
                bat 'minikube start'
                // echo bat 'minikube status'
                powershell 'minikube docker-env | Invoke-Expression'
            }
        }
        stage('Build Docker Images') {
            steps {
                echo 'Building...'                
                // bat 'cd Thrift_Store && dir' 
                bat 'docker build -t thriftstore-be:latest -f Thrift_Store/Dockerfile Thrift_Store --cache-from thriftstore-be:latest'   
                // bat 'cd..' 
                // bat 'cd react-tutorial && dir'                                                  
                bat 'docker build -t thriftstore-fe:latest -f react-tutorial/Dockerfile react-tutorial --cache-from thriftstore-fe:latest'
                bat 'cd..'                           
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }
        } 
        stage('deploy on minikube'){
            steps {
                // bat 'cd Kubernetes'
                def kubernetesDir = "${WORKSPACE}\\Kubernetes"
                bat "cd /D ${kubernetesDir}"
                bat 'kubectl apply -f mongo-deployment.yaml'
                bat 'kubectl apply -f backend-deployment.yaml'
                bat 'kubectl apply -f frontend-deployment.yaml'
                bat 'kubectl port-forward service/backend 5000:5000'
                bat 'kubectl port-forward service/frontend 3000:3000'
            }
        }
               
    }
    post {
        success {
            echo 'Build successful!'
        }        
        failure {
            echo 'Build failed!'
        }
    }
}